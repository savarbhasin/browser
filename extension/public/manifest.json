{
  "manifest_version": 3,
  "name": "URL Phishing Detector",
  "version": "0.1.0",
  "description": "Scores URLs using a local FastAPI backend.",
  "action": {
    "default_title": "Check",
    "default_popup": "popup.html"
  },
  "permissions": ["tabs", "activeTab", "notifications", "storage", "scripting"],
  "host_permissions": ["http://localhost:8000/*", "<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
